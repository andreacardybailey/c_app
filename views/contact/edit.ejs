<a href="/supplier/edit/<%= contact.supplier_id %>" class="back"><i class="ss-icon">&#x21A9;</i></a>

<form method="put" action="/suppliercontact/<%= contact.id %>" id="contactForm" enctype="multipart/form-data" name="<%- HTMLHelper.formName() %>" data-submit="ajax">
   <fieldset>
      <legend>Update Supplier Contact</legend>
      <table>
         <tbody>
            <tr>
               <td><label for="supplier_id">Supplier:</label></td>
               <td>
                  <select name="supplier_id" id="supplier_id">
                  <%- supplier_option_list %>
                  </select>
               </td>
            </tr>
            <tr>
               <td><label for="firstname">First Name:</label></td>
               <td><input type="text" name="firstname" id="firstname" value="<%= contact.firstname %>" /></td>
            </tr>
            <tr>
               <td><label for="lastname">Last Name:</label></td>
               <td><input type="text" name="lastname" id="lastname" value="<%= contact.lastname %>"/></td>
            </tr>
            <tr>
               <td><label for="email">E-mail:</label></td>
               <td><input type="text" name="email" id="email" value="<%= contact.email %>"/></td>
            </tr>
            <tr>
               <td><label for="phone">Phone:</label></td>
               <td><input type="text" name="phone" id="phone" value="<%= contact.phone %>"/></td>
            </tr>
         </tbody>
      </table>
      <div class="buttons">
         <button type="reset" class="reset">Reset</button>
         <button type="button" data-href="/supplier/edit/<%= contact.supplier_id %>">Back to Supplier</button> 
         <button type="submit" class="submit">Submit</button>  
      </div>
   </fieldset>
   <input type="hidden" name="id" value="<%= contact.id %>"/>
   <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
</form>
                  
                  
                  
                  
                  
                  
                  
                  
                  
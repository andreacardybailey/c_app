<form method="put" action="/accesspoint/<%= accesspoint.id %>" id="accesspointForm" enctype="multipart/form-data" name="<%- HTMLHelper.formName() %>" data-submit="ajax">
   <fieldset>
      <legend>Update Access Point</legend>
      <table>
         <tbody>
            <tr>
               <td><label for="name">Name:</label></td>
               <td><input type="text" name="name" id="name" value="<%= accesspoint.name %>" /></td>
            </tr>
            <tr>
               <td><label for="address">Address:</label></td>
               <td><input type="text" name="address" id="address" value="<%= accesspoint.address %>"/></td>
            </tr>
            <tr>
               <td><label for="city">City:</label></td>
               <td><input type="text" name="city" id="city" value="<%= accesspoint.city %>"/></td>
            </tr>
            <tr>
               <td><label for="state">State:</label></td>
               <td>
                  <select name="state" id="state">
                    <% for(var abbrev in states) { %>
                    <option value="<%- abbrev %>"<%- accesspoint.state == abbrev ? ' selected="selected"' : '' %>><%= states[abbrev] %></option>
                    <% } %>                    
                  </select>
               </td>
            </tr>
            <tr>
               <td><label for="zipcode" id="zipcode">Zipcode:</label></td>
               <td><input type="text" name="zipcode" id="zipcode" value="<%- accesspoint.zipcode %>"/></td>
            </tr>
            <tr>
               <td><label for="lat">Lat:</label></td>
               <td><input type="text" name="lat" id="lat" value="<%- accesspoint.lng %>"/></td>
            </tr>
            <tr>
               <td><label for="lng">Lng:</label></td>
               <td><input type="text" name="lng" id="lng" value="<%- accesspoint.lng %>"/></td>
            </tr>
            <tr>
               <td><label for="phone" id="phone">Phone:</label></td>
               <td><input type="text" name="phone" id="phone" value="<%- accesspoint.phone %>"/></td>
            </tr>
            <tr>
               <td><label for="logo">Logo:</label></td>
               <td>
                  <input type="file" name="_logo" id="_logo" size="55" />
                  <input type="hidden" name="logo" id="logo" value="<%- accesspoint.logo %>" />  
                  <img src="<%= accesspoint.logo %>" style="<%= accesspoint.logo ? 'display:block' : 'display:none' %>;max-width:200px"/>
               </td>
            </tr>  
         </tbody>
      </table>
      <div class="buttons">
         <button type="reset" class="reset">Reset</button> <button type="submit" class="submit">Submit</button>  
      </div>
   </fieldset>
   <input type="hidden" name="id" value="<%= accesspoint.id %>"/>
   <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
</form>
                  
                  
                  
                  
                  
                  
                  
                  
                  